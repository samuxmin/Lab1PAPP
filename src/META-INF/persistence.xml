    <class>logica.Usuario</class>
    <class>logica.ActividadTuristica</class>
    <class>logica.Departamento</class>
    <class>logica.Inscripcion_general</class>
    <class>logica.Inscripcion_paquete</class>
    <class>logica.Paquete</class>
    <class>logica.Proveedor</class>
    <class>logica.SalidasTuristicas</class>
    <class>logica.Turista</class>
    <class>logica.Categoria</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/Turismo"/>
      <property name="javax.persistence.jdbc.user" value="tecnologo"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="tecnologo"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
